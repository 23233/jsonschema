{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/23233/jsonschema/recursive-example",
  "$ref": "#/$defs/RecursiveExample",
  "$defs": {
    "RecursiveExample": {
      "properties": {
        "text": {
          "type": "string",
          "attach_data": {
            "kind": "string"
          }
        },
        "children": {
          "items": {
            "$ref": "#/$defs/RecursiveExample"
          },
          "type": "array",
          "attach_data": {
            "kind": "slice"
          }
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "text"
      ],
      "attach_data": {
        "kind": "struct"
      }
    }
  }
}